<h2>Create a post!</h2>
<%= form_for @post do |f| %>
<div>
  <%= f.label "title" %><br>
  <%= f.text_field "title" %>
</div>
<div>
  <%= f.label "author" %><br>
  <%= f.text_field "author" %><br>
</div>
<dir>
  <%= f.label "text" %><br>
  <%= f.text_area "text" %>
</dir>
<div>
  <%= f.submit "Save" %>
</div>
<% end %>